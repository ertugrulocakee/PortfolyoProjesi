@model PortfolioProject.Areas.Writer.Models.UserEditViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

   <div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Profil Bilgilerini Düzenle</h4>
             
                  <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                      <label>Adınız</label>
                       <span asp-validation-for="Name" class="text-danger"></span>
                      <input type="text" class="form-control" asp-for="Name"  placeholder="Adınız" required>
                    </div>
                    <div class="form-group">
                      <label>Soyadınız</label>
                       <span asp-validation-for="SurName" class="text-danger"></span>
                      <input type="text" class="form-control" asp-for="SurName" placeholder="Soyadınız" required>
                    </div>

                       <div class="form-group">
                      <label>Kullanıcı Adınız</label>
                       <span asp-validation-for="UserName" class="text-danger"></span>
                      <input type="text" class="form-control" asp-for="UserName" placeholder="Kullanıcı Adınız">
                    </div>

                     <div class="form-group">
                      <label>E-posta Adresiniz</label>
                       <span asp-validation-for="UserMail" class="text-danger"></span>
                      <input type="text" class="form-control" asp-for="UserMail" placeholder="E-posta Adresiniz">
                    </div>
                                     
                    <div class="form-group">
                      <label>Resim Seç</label>
                      <input type="file" asp-for="Picture">
            
                    </div>
             
                
                    <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                   
                  </form>
                </div>
              </div>
            </div>

