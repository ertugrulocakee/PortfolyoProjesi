@model PortfolioProject.Areas.Writer.Models.PasswordChangeViewModel

@{
    ViewData["Title"] = "PasswordChanger";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Şifre Bilgini Düzenle</h4>
             
                  <form class="forms-sample" method="post" action="/Writer/Profile/PasswordChanger/">

                      <div class="form-group">
                      <label>Şifreniz</label>
                       <span asp-validation-for="Password" class="text-danger"></span>
                      <input type="password" asp-for="Password" class="form-control" placeholder="Şifreniz" required>
                    </div>
                       <div class="form-group">
                      <label>Tekrar Şifreniz</label>
                       <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                      <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Tekrar Şifreniz" required>
                    </div>

                    
                    <button type="submit" class="btn btn-outline-success">Şifreyi Güncelle</button>
                   
                  </form>
                </div>
              </div>
            </div>

