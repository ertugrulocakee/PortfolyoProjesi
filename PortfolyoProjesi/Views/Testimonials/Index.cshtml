@using EntityLayer.Concrete
@model List<Testimonial>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

            <div class="row ">
              <div class="col-12 grid-margin">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Referanslar</h4>
                    <div class="table-responsive">
                      <table class="table">
                        <thead>
                          <tr>
                          
                            <th> # </th>
                            <th> Referans Kişi </th>
                            <th> Referansın Şirketi </th>                           
                            <th> Sil </th>
                          
                          </tr>
                        </thead>
                        <tbody>

                         @foreach(var item in Model){
                          
                          <tr> 
                            <th> @item.TestimonialID </th>  
                            <td>
                              <img src="/testimonialimage/@item.ImageUrl" alt="image" />
                              <span class="pl-2">@item.ClientName</span>
                            </td>
                            <td> @item.Company </td>
                            <td><a href="/Testimonials/DeleteTestimonial/@item.TestimonialID" class="btn btn-outline-danger">Sil</a></td>
                          
                          </tr>
                    
                            }
                        </tbody>
                      </table>
                      <br/>
                      <a href="/Testimonials/AddTestimonial/" class="btn btn-outline-info">Yeni Referans Ekle</a>
                    </div>
                  </div>
                </div>
              </div>
            </div>

