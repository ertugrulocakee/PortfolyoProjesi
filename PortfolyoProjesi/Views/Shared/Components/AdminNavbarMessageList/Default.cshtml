@using EntityLayer.Concrete
@model Tuple<List<String>,List<WriterMessage>>



             <li class="nav-item dropdown border-left">
                <a class="nav-link count-indicator dropdown-toggle" id="messageDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
                  <i class="mdi mdi-email"></i>
                  <span class="count bg-success"></span>
                </a>
                <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
                  <h6 class="p-3 mb-0">Son Gelen Mesajlar</h6>
                  <div class="dropdown-divider"></div>
                   @for (int i = 0; i<Model.Item2.Count();i++)
                  {
                        

                 <a class="dropdown-item preview-item" href="/AdminMessage/MessageDetails/@Model.Item2[i].WriterMessageID"> 
                  @for (int j=0;j<5; j++)
                  {
                      @if(i==j){
                     <div class="preview-thumbnail">
                      <img src="/userimage/@Model.Item1[j]" alt="image" class="rounded-circle profile-pic">
                    </div>
                      }
                     }

                     <div class="preview-item-content">                        
                      <p class="preview-subject ellipsis mb-1"> @Model.Item2[i].SenderName </p>
                      <p class="preview-subject ellipsis mb-1"> @Model.Item2[i].Subject </p>
                      <p class="text-muted mb-0"> @(((DateTime)@Model.Item2[i].Date).ToString("dd-MMM-yyyy")) </p>                     
                    </div>
                  </a>
                  <div class="dropdown-divider"></div>
                     }                    
                  <br/>         
                  <div style="text-align:center">
                  <a href="/AdminMessage/ReceiverBox/"><p> Tüm gelen mesajlarına bak... </p></a>
                  </div>  
                </div>
              </li>
