@using EntityLayer.Concrete;
@model List<Certificate>

<div class="section px-3 px-lg-4 pt-5" id="certificate">
  <div class="container-narrow">
    <div class="text-center mb-5">
      <h2 class="marker marker-center">Sertifikalar</h2>
    </div>
    <div class="row">

      @foreach(var item in Model){

       @if (@item.CertificateID % 2 != 0)
        {

      <div class="col-md-6">
        <div class="card mb-3" data-aos="fade-right" data-aos-delay="100">
          <div class="card-header px-3 py-2">
            <div class="d-flex justify-content-between">
              <div>
                <h3 class="h5 mb-1">@item.CertificateName</h3>              
              </div>
              <a class="btn btn-outline-info" href="/certificatepdf/@item.CertificateUrl">Sertifikayı Gör</a>
            </div>
          </div>       
        </div>
        </div>
         }
         else
         {
            <div class="col-md-6">
        <div class="card mb-3" data-aos="fade-left" data-aos-delay="100">
          <div class="card-header px-3 py-2">
            <div class="d-flex justify-content-between">
              <div>
                <h3 class="h5 mb-1">@item.CertificateName</h3>               
              </div>
              <a class="btn btn-outline-info" href="/certificatepdf/@item.CertificateUrl">Sertifikayı Gör</a>
            </div>
          </div>        
        </div>
       </div>  
         }
        }
    </div>
  </div>
</div>
