@using EntityLayer.Concrete
@model List<Certificate>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


  <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Sertifikalar</h4>
                   
                    <div class="table-responsive">
                      <table class="table">
                        <thead>
                          <tr>
                            <th>#</th>
                            <th>Sertifika</th>
                            <th>Sil</th>
                          </tr>
                        </thead>
                        <tbody>
                        
                         @foreach (var item in Model)
                         { 
                            
                         <tr>
                            <td>@item.CertificateID</td>
                            <td>@item.CertificateName</td>
                          
                            <td><a href="/Certificate/DeleteCertificate/@item.CertificateID" class="btn btn-outline-danger">Sil</a></td>
                            
                          </tr>

                         }
                          
                        </tbody>
                      </table>
                      <a href="/Certificate/AddCertificate/" class="btn btn-outline-info">Yeni Sertifika Ekle</a>
                    </div>
                  </div>
                </div>
              </div>
 
            

