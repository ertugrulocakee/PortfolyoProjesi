@using EntityLayer.Concrete
@model List<WriterMessage>


@{
    ViewData["Title"] = "ReceiverBox";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Gelen Mesajlar Kutusu</h4>
                   
                    <div class="table-responsive">
                      <table class="table">
                        <thead>
                          <tr>
                            <th>#</th>
                            <th>Gönderen</th>
                            <th>E-posta adresi</th>
                            <th>Konu</th>
                            <th>Tarih</th>
                            <th>Mesajı Gör</th>
                          </tr>
                        </thead>
                        <tbody>
                        
                         @foreach (var item in Model)
                         { 
                            
                         <tr>
                            <td>@item.WriterMessageID</td>
                            <td>@item.SenderName</td>
                            <td>@item.Sender</td>
                            <td>@item.Subject</td>
                            <td> @(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>                
                            <td><a href="/AdminMessage/MessageDetails/@item.WriterMessageID" class="btn btn-outline-success">Detayı Gör</a></td> 
                          </tr>

                         }
                          
                        </tbody>
                      </table>                    
                    </div>
                  </div>
                </div>
              </div>
 
            




