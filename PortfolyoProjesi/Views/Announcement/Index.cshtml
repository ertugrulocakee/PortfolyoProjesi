@using EntityLayer.Concrete
@model List<Announcement>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}



              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Duyurular</h4>
                   
                    <div class="table-responsive">
                      <table class="table">
                        <thead>
                          <tr>
                            <th>#</th>
                            <th>Duyuru Başlığı</th>
                            <th>Duyuru Türü</th>
                            <th>Tarih</th>
                            <th>Duyuru Detayı</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                          </tr>
                        </thead>
                        <tbody>
                        
                         @foreach (var item in Model)
                         { 
                            
                         <tr>
                            <td>@item.id</td>
                            <td>@item.Title</td>
                            <td>@item.status</td>
                            <td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>
                             <td><a href="/Announcement/AnnouncementDetails/@item.id" class="btn btn-outline-primary">Detaya Git</a></td>
                            <td><a href="/Announcement/DeleteAnnouncement/@item.id" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/Announcement/UpdateAnnouncement/@item.id" class="btn btn-outline-success">Düzenle</a></td>
                          </tr>

                         }
                          
                        </tbody>
                      </table>
                      <a href="/Announcement/AddAnnouncement/" class="btn btn-outline-info">Yeni Duyuru Oluştur</a>
                    </div>
                  </div>
                </div>
              </div>
 
            


